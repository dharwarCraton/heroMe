<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hero_bg_gradient"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/top_banner_bar" />
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/heroes" />

        <Button
            android:id="@+id/came_by_accident_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_button"
            android:drawableStart="@drawable/lightning"
            android:drawableEnd="@drawable/item_selected"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:text="Came by accident"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/genetic_mutation_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_button"
            android:drawableStart="@drawable/atomic"
            android:drawableEnd="@drawable/item_selected"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:text="Genetic mutation"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/born_with_them_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_button"
            android:drawableStart="@drawable/rocket"
            android:drawableEnd="@drawable/item_selected"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:text="Born with them"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/choose_powers_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/hero_solid_button"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:text="Choose Powers"
            android:textColor="#10161D"
            android:textSize="22sp" />


    </LinearLayout>

</FrameLayout>